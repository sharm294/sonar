[MESSAGES CONTROL]

disable=no-name-in-module, # module detection doesn't always work correctly
        c-extension-no-member, # module detection doesn't always work correctly
        trailing-whitespace, # handled by black
        fixme, # allow fixme / TODO etc. in code
        protected-access, # this is fine if done with intention
        import-error, # can be tricky with different environments
        cyclic-import, # disabled while pylint has a bug with type annotations
        duplicate-code, # can be addressed later. For now, some is intentional


[FORMAT]

# Maximum number of characters on a single line.
max-line-length=160 # handled by black

[BASIC]

# Good variable names which should always be accepted, separated by a comma.
good-names=i,
           j,
           k,
           ex,
           _,
           f,
           ip,
           db,
           t

[DESIGN]

# Minimum number of public methods for a class (see R0903).
min-public-methods=0

# Maximum number of arguments for function / method.
max-args=6
